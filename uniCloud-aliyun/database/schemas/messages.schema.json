		"create": false,
		"update": "doc.openid == auth.openid",
		"delete": false,
		"count": "doc.openid == auth.openid"
	},
	"properties": {
		"_id": {
			"description": "消息ID"
		},
		"openid": {
			"bsonType": "string",
			"description": "用户OpenID"
		},
		"title": {
			"bsonType": "string",
			"description": "消息标题"
		},
		"content": {
			"bsonType": "string",
			"description": "消息内容"
		},
		"type": {
			"bsonType": "string",
