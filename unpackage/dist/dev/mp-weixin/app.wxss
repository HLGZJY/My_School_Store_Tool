  -webkit-line-clamp: 3;
  overflow: hidden;
}
/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 8px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(10, 37, 64, 0.04);
}
/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 16px;
  border-radius: 8px;
  font-size: 14px;
  border: none;
  outline: none;
  transition: all 0.2s ease;
}
.btn:active {
  transform: scale(0.98);
}
.btn-primary {
  background-color: #00D4AA;
  color: #0A2540;
  font-weight: 600;
}
.btn-secondary {
  background-color: #E8ECF1;
  color: #4A5568;
}
.btn-danger {
  background-color: #EF4444;
  color: #FFFFFF;
}
.btn:disabled {
  opacity: 0.5;
}
/* 输入框样式 */
.input {
  width: 100%;
  padding: 12px;
  background-color: #F7F9FA;
  border-radius: 8px;
  font-size: 14px;
  color: #4A5568;
  border: none;
  outline: none;
}
/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 4px;
  font-size: 12px;
}
/* 徽标样式 */
.badge {
  min-width: 20px;
  height: 20px;
  padding: 0 4px;
  background-color: #EF4444;
  border-radius: 50%;
  font-size: 12px;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24px;
}
.empty-icon {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
}
.empty-text {
  font-size: 16px;
  color: #4A5568;
  margin-bottom: 8px;
}
.empty-tip {
  font-size: 14px;
  color: #A0AEC0;
}
/* 加载更多状态 */
.loading-more,
.no-more {
  padding: 20px;
  text-align: center;
  color: #A0AEC0;
  font-size: 14px;
}
