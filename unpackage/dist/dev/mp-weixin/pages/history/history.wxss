.container.data-v-b2d018fa {
  min-height: 100vh;
  background-color: #F7F9FA;
}
.header.data-v-b2d018fa {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  background-color: #FFFFFF;
}
.title.data-v-b2d018fa {
  font-size: 18px;
  font-weight: 600;
  color: #0A2540;
}
.clear-btn.data-v-b2d018fa {
  display: flex;
  align-items: center;
